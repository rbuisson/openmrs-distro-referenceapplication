<?xml version="1.0" encoding="UTF-8"?>
<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>
  <id>zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
        <directory>${project.build.directory}/sdk-distro</directory>
        <outputDirectory>/</outputDirectory>
        <includes>
            <include>README*</include>
            <include>LICENSE*</include>
            <include>NOTICE*</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>${project.build.directory}/sdk-distro/web</directory>
        <outputDirectory>openmrs_core</outputDirectory>
        <includes>
            <include>**/*.war</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>${project.build.directory}/sdk-distro/web/modules</directory>
        <outputDirectory>openmrs_modules</outputDirectory>
        <includes>
            <include>**/*.omod</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>${project.build.directory}/sdk-distro/web/owa</directory>
        <outputDirectory>openmrs_owas</outputDirectory>
        <includes>
            <include>**/*</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>${project.build.directory}/sdk-distro/web/frontend</directory>
        <outputDirectory>spa</outputDirectory>
        <includes>
            <include>**/*</include>
        </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>..</outputDirectory>
      <directory>${project.build.directory}/${project.artifactId}</directory>
    </fileSet>
  </fileSets>
</assembly>
